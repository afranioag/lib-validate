<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- üîπ TROCAR -->
    <groupId>com.afranio</groupId>
    <artifactId>validadores</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>Validadores</name>
    <description>Biblioteca simples de valida√ß√£o em Java</description>
    <url>https://github.com/seunome/validadores</url>

    <!-- üîπ Informa√ß√µes de licen√ßa -->
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <!-- üîπ Informa√ß√µes do autor -->
    <developers>
        <developer>
            <id>seunome</id>
            <name>Seu Nome</name>
            <email>seuemail@exemplo.com</email>
        </developer>
    </developers>

    <!-- üîπ SCM: link do reposit√≥rio GitHub -->
    <scm>
        <connection>scm:git:git://github.com/seunome/validadores.git</connection>
        <developerConnection>scm:git:ssh://github.com:seunome/validadores.git</developerConnection>
        <url>https://github.com/seunome/validadores</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <java.version>21</java.version>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- Depend√™ncias necess√°rias v√£o aqui -->
        <!-- Exemplo: se quiser usar valida√ß√µes do Jakarta -->
        <!--
        <dependency>
            <groupId>jakarta.validation</groupId>
            <artifactId>jakarta.validation-api</artifactId>
            <version>3.1.0</version>
        </dependency>
        -->
    </dependencies>

    <build>
        <plugins>
            <!-- Compila√ß√£o em Java 21 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>21</release>
                </configuration>
            </plugin>

            <!-- Gera JAR com sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Gera Javadoc -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.6.3</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
